<section id="{{ slugify title }}">
	<div class="row">
		<div class="col-lg-12">
			<h1>{{ title }}</h1>
			{{#markdown}}{{ body }}{{/markdown}}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<video autobuffer autoloop loop controls class="img-responsive">
				<source src="./videos/animation-styles.mp4">
				<source src="./videos/animation-styles.ogv">
				<source src="./videos/animation-styles.webm">
			</video>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<hr/>
		</div>
	</div>
</section>