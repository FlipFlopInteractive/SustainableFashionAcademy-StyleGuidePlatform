<section id="{{ slugify title }}">
	<div class="row">
		<div class="col-lg-12">
			<h1>{{ title }}</h1>
			{{#markdown}}{{ description }}{{/markdown}}
		</div>
	</div>
	<div class="row">
		{{#each illustrations }}
		<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
			{{> image this }}
			<br/>
		</div>
		{{/each}}
	</div>
	<div class="row">
		<div class="col-lg-12">
			<hr/>
		</div>
	</div>
</section>